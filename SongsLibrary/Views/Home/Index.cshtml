    <div class="container">
        <div class="row">
            <div class="col-md-4 ">
                <div class="count">
                    <span class="fa fa-smile-o"></span>
                    <p class="number">@ViewData["ArtistsCount"]</p>
                    <h4>Artists</h4>
                </div>
            </div>
            <div class="col-md-4 ">
                <div class="count">
                    <span class="fa fa-smile-o"></span>
                    <p class="number">@ViewData["GenresCount"]</p>
                    <h4>Genres</h4>
                </div>
            </div>
            <div class="col-md-4 ">
                <div class="count">
                    <span class="fa fa-smile-o"></span>
                    <p class="number">@ViewData["MusicVideosCount"]</p>
                    <h4>Music Videos</h4>
                </div>
            </div>
        </div>
    </div>
</section>



